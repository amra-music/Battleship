<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="battleship.controllers.StartSceneControler">
   <top>
      <AnchorPane fx:id="title" onMousePressed="#drag" prefHeight="43.0" prefWidth="1100.0" style="-fx-background-color: #47A3B5;" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="50.0" />
         </BorderPane.margin>
         <cursor>
            <Cursor fx:constant="MOVE" />
         </cursor>
      </AnchorPane>
   </top>
   <center>
      <Pane fx:id="primaryScene" prefHeight="534.0" prefWidth="1100.0" snapToPixel="false">
         <children>
            <ImageView fx:id="startSceneImageView" fitHeight="534.0" fitWidth="1100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/battleship.jpg" />
               </image>
            </ImageView>
            <Button fx:id="startButton" alignment="CENTER" layoutX="745.0" layoutY="83.0" mnemonicParsing="false" onMousePressed="#start" prefHeight="50.0" prefWidth="130.0" styleClass="start-button" text="Start">
               <font>
                  <Font size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="rulesButton" layoutX="745.0" layoutY="152.0" mnemonicParsing="false" onMousePressed="#rules" prefHeight="50.0" prefWidth="130.0" styleClass="start-button" text="Rules">
               <font>
                  <Font size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="exitButton" layoutX="745.0" layoutY="225.0" mnemonicParsing="false" onMousePressed="#exit" prefHeight="50.0" prefWidth="130.0" styleClass="start-button" text="Exit">
               <font>
                  <Font size="15.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </Pane>
   </center>
</BorderPane>
